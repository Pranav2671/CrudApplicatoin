@model IEnumerable<CrudApplicatoin.Models.Employee>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="col-8 offset-2">
        <h1 class="text-center text-primary">Employee List</h1>
        <a class="btn btn-sm btn-success m-1" asp-controller="Employee" asp-action="Create">Create</a>
        <table class="table table-bordered>
            <tr class="text-center">
                <th>Employee Id</th>
                <th>Full Name</th>
                <th>City</th>
                <th>State</th>
                <th>Salary</th>
                <th>Action</th>
                </tr>
            @foreach(var e in Model)
            {
                <tr class="text-center">
                    <td>@e.Id</td>
                    <td>@e.FullName</td>
                    <td>@e.City</td>
                    <td>@e.State</td>
                    <td>@e.Salary</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-controller="Employee" asp-action="Edit" asp-route-id="@e.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-controller="Employee" asp-action="Delete" asp-route-id="@e.Id">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>