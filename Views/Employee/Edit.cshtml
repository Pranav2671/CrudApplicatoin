@model CrudApplicatoin.Models.Employee
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div>
                <div class="card-header">
                    <h1 class="text-center text-primary">Edit Employee</h1>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Edit">
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <input type="hidden" asp-for="Id"/>
                            <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter employee First Name" />
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName"></label>
                            <input type="text" asp-for="LastName" class="form-control" placeholder="Enter employee Last Name" />
                        </div>
                        <div class="form-group">
                            <label asp-for="City"></label>
                            <input type="text" asp-for="City" class="form-control" placeholder="Enter City " />
                        </div>
                        <div class="form-group">
                            <label asp-for="State"></label>
                            <input type="text" asp-for="State" class="form-control" placeholder="Enter State" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Salary"></label>
                            <input type="text" asp-for="Salary" class="form-control" placeholder="Enter Salary" />
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-sm btn-outline-success floatright" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

